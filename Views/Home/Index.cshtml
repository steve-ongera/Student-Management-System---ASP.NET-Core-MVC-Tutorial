@{
    ViewData["Title"] = "Dashboard - Student Management System";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        color: white;
        padding: 4rem 0;
        margin: -2rem -15px 3rem -15px;
        border-radius: 0 0 2rem 2rem;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 200"><defs><pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse"><path d="M 40 0 L 0 0 0 40" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        animation: fadeInUp 1s ease-out;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        margin-bottom: 2rem;
        opacity: 0.9;
        animation: fadeInUp 1s ease-out 0.2s both;
    }

    .hero-stats {
        animation: fadeInUp 1s ease-out 0.4s both;
    }


    .stat-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 1rem;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
        margin-bottom: 1rem;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.15);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #ecf0f1;
    }

    .stat-label {
        font-size: 1rem;
        opacity: 0.9;
    }

    .quick-actions {
        margin: 3rem 0;
    }

    .action-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border: none;
        transition: all 0.3s ease;
        height: 100%;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .action-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        color: inherit;
        text-decoration: none;
    }

    .action-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        padding: 1rem;
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .action-card:nth-child(1) .action-icon {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
    }

    .action-card:nth-child(2) .action-icon {
        background: linear-gradient(135deg, #27ae60, #229954);
        color: white;
    }

    .action-card:nth-child(3) .action-icon {
        background: linear-gradient(135deg, #f39c12, #e67e22);
        color: white;
    }

    .action-card:nth-child(4) .action-icon {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    .action-title {
        font-size: 1.4rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #2c3e50;
    }

    .action-description {
        color: #7f8c8d;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .recent-activity {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-top: 3rem;
    }

    .activity-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        color: #2c3e50;
    }

    .activity-header i {
        font-size: 1.5rem;
        margin-right: 0.5rem;
        color: #3498db;
    }

    .activity-item {
        padding: 1rem;
        border-left: 3px solid #3498db;
        background: #f8f9fa;
        margin-bottom: 1rem;
        border-radius: 0 0.5rem 0.5rem 0;
        transition: all 0.3s ease;
    }

    .activity-item:hover {
        background: #e9ecef;
        transform: translateX(5px);
    }

    .activity-time {
        font-size: 0.85rem;
        color: #7f8c8d;
        margin-bottom: 0.25rem;
    }

    .activity-text {
        font-weight: 500;
        color: #2c3e50;
    }

    .welcome-message {
        background: linear-gradient(135deg, #ecf0f1 0%, white 100%);
        border-radius: 1rem;
        padding: 2rem;
        margin-bottom: 3rem;
        border-left: 5px solid #3498db;
    }

    .pulse {
        animation: pulse 2s infinite;
    }

    
</style>

